[user]
  name = Caleb Spare
  email = cespare@gmail.com

[core]
  excludesfile = ~/.git-global-ignore
  editor = "vim -c '1 | startinsert!'"

[diff]
  tool = vimdiff

[alias]
  stat = status
  s = status --short --branch --ignore-submodules=untracked
  c = commit
  a = add
  f = filename
  sn = status --short --branch --untracked=no
  co = checkout
  wc = whatchanged
  l = log
  b = branch
  sub = submodule
  pom = push origin master
  pu = push -u origin HEAD
  t = tag
  root = rev-parse --show-toplevel
  su = !"cd `git root` && git sub update --init --recursive && cd -"
  ff = merge --ff-only
  pf = push --force-with-lease
  ls = ls-files
  bi = bisect
  h = rev-parse HEAD
  r = rebase
  ri = rebase -i
  dc = diff --cached
  lol = log --oneline --graph --decorate
  conf = config
  cam = commit -a --amend
  whoami = config --get user.email
  conflicts = diff --name-only --diff-filter=U
  fza = "!git ls-files -m -o --exclude-standard | fzf --print0 -m | xargs -0 -t -o git add"
  recent = branch --remote --sort=-committerdate

  # For Go development.
  change = codereview change
  gofmt = codereview gofmt
  mail = codereview mail
  pending = codereview pending
  submit = codereview submit
  sync = codereview sync

[push]
  default = simple
  followTags = true

[pull]
  rebase = preserve

[rebase]
  autosquash = true

[color]
  diff = auto
  status = auto
  branch = auto

[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green

[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold

[color "status"]
  added = yellow
  changed = green
  untracked = cyan

[github]
  user = cespare

[hub]
  protocol = ssh

# Put OS-specific stuff in .gitconfig.local.
[include]
  path = ~/.gitconfig.local
