#!/bin/bash

# FIXME: The sleep hack is because of some issue I haven't tracked down in the
# interaction of Sway, Alacritty, and Neovim where the initial window dimensions
# aren't set correctly and nvim rendering is messed up until the window is
# manually resized.

nohup alacritty \
  --config-file ~/.config/alacritty/nvim.yml \
  --title 'nvim' \
  --working-directory . \
  --command sh -c 'sleep 0.05 && exec nvim' >/dev/null 2>&1 &
