# Linux-specific bash settings.

# I think this is an Ubuntu thing.
alias o='xdg-open'
alias open='xdg-open'

alias e='gvim'
alias ls='ls --color=auto'

# Ubuntu calls 'ack' ack-grep
alias ack='ack-grep'

# Google Go
export GOOS=linux

# Android development
export PATH=$PATH:$HOME/Apps/android-sdk/android-sdk-linux_x86/tools
