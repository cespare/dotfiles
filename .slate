# Fullscreen: cmd-ctrl-enter
bind return:ctrl,cmd move screenOriginX,screenOriginY screenSizeX,screenSizeY

# Left half: cmd-ctrl-h
bind h:ctrl,cmd push left bar-resize:screenSizeX/2

# Right half: cmd-ctrl-l
bind l:ctrl,cmd push right bar-resize:screenSizeX/2

# Upper half: cmd-ctrl-k
bind k:ctrl,cmd push up bar-resize:screenSizeY/2

# Lower half: cmd-ctrl-j
bind j:ctrl,cmd push down bar-resize:screenSizeY/2

# Screens: 8,9,0
bind 8:ctrl,cmd throw 1
bind 9:ctrl,cmd throw 0
bind 0:ctrl,cmd throw 2

# Centering: p for both, [ for horizontal, ] for vertical
bind p:ctrl,cmd move screenOriginX+(screenSizeX-windowSizeX)/2,screenOriginY+(screenSizeY-windowSizeY)/2 windowSizeX,windowSizeY
bind {:ctrl,cmd move screenOriginX+(screenSizeX-windowSizeX)/2,windowTopLeftY windowSizeX,windowSizeY
bind }:ctrl,cmd move windowTopLeftX,screenOriginY+(screenSizeY-windowSizeY)/2 windowSizeX,windowSizeY

# Nice center and resize: space
bind space:ctrl,cmd move screenOriginX+screenSizeX/6,screenOriginY+screenSizeY/6 2*screenSizeX/3,2*screenSizeY/3

# Number pad grid for movement
bind pad7:ctrl,cmd corner top-left
bind pad8:ctrl,cmd push top center
bind pad9:ctrl,cmd corner top-right
bind pad4:ctrl,cmd push left center
bind pad5:ctrl,cmd move screenOriginX+(screenSizeX-windowSizeX)/2,screenOriginY+(screenSizeY-windowSizeY)/2 windowSizeX,windowSizeY
bind pad6:ctrl,cmd push right center
bind pad1:ctrl,cmd corner bottom-left
bind pad2:ctrl,cmd push bottom center
bind pad3:ctrl,cmd corner bottom-right

# Move with ctrl-arrow
bind left:ctrl nudge -100 +0
bind up:ctrl nudge +0 -100
bind right:ctrl nudge +100 +0
bind down:ctrl nudge +0 +100

# Expand in a direction with arrows
bind left:ctrl,cmd move screenOriginX,windowTopLeftY windowSizeX+windowTopLeftX-screenOriginX,windowSizeY
bind right:ctrl,cmd move windowTopLeftX,windowTopLeftY screenSizeX-windowTopLeftX+screenOriginX,windowSizeY
bind up:ctrl,cmd move windowTopLeftX,screenOriginY windowSizeX,windowSizeY+windowTopLeftY-screenOriginY
bind down:ctrl,cmd move windowTopLeftX,windowTopLeftY windowSizeX,screenSizeY-windowTopLeftY+screenOriginY
